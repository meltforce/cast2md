# cast2md Production Configuration
# Copy to .env and configure

# === REQUIRED ===
POSTGRES_PASSWORD=change_me_to_secure_password

# === OPTIONAL ===
# PORT=8000
# DATA_PATH=./data
# VERSION=latest

# Whisper settings
# WHISPER_MODEL=large-v3-turbo
# WHISPER_DEVICE=cpu

# Distributed transcription
# DISTRIBUTED_TRANSCRIPTION_ENABLED=true

# RunPod GPU workers
# RUNPOD_ENABLED=true
# RUNPOD_API_KEY=
# RUNPOD_TS_AUTH_KEY=
# RUNPOD_SERVER_URL=
# RUNPOD_SERVER_IP=

# Notifications
# NTFY_ENABLED=true
# NTFY_TOPIC=cast2md

# Tailscale (if using sidecar)
# TS_AUTHKEY=tskey-auth-xxx
# TAILSCALE_HOSTNAME=cast2md
